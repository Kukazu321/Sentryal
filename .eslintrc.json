{
  "root": true,
  "ignorePatterns": [
    "node_modules/",
    "dist/"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": [
          "./tsconfig.json",
          "./frontend/tsconfig.json",
          "./backend/tsconfig.json"
        ],
        "sourceType": "module"
      },
      "plugins": [
        "@typescript-eslint"
      ]
    }
  ],
  "settings": {
    "next": {
      "rootDir": "./frontend"
    }
  }
}